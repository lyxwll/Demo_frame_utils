<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/second_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/headerview"
    android:background="#FFFFFF" >

    <HorizontalScrollView
        android:id="@+id/second_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-6dip"
        android:layout_marginRight="-6dip"
        android:layout_toLeftOf="@+id/second_rigth"
        android:layout_toRightOf="@+id/second_left"
        android:fadingEdgeLength="0px"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/seccond_allitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <LinearLayout
                android:id="@+id/move_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/second_left"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/second_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="4dip"
        android:background="#000000"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/second_rigth"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/second_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="4dip" />

</RelativeLayout>