<resources>

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="c_dialog" mce_bogus="1" parent="android:style/Theme.Dialog">

        <!-- 弹出对话框样式 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <!-- 加载进度条样式设置 -->
    <style name="loading_text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="loading_pb"></style>
    <!-- 按钮样式设置 -->
    <style name="button_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">things</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">3dip</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 列表样式设置 -->
    <style name="listitem_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="listitem_date">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="listitem_des">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#535353</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!-- 二级栏目样式 -->
    <style name="second_text_style">
        <item name="android:textSize">16.5sp</item>
        <item name="android:textColor">#9C9C9C</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>
    <!-- 设置相关界面标题样式 -->
    <style name="setting_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Activity侧滑 -->
    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

</resources>